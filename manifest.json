{
  "manifest_version": 3,
  "name": "YouTube Video Limiter",
  "version": "0.2.1",
  "description": "Limits YouTube video viewing per day.",
  "permissions": [
    "storage",
    "webNavigation",
    "activeTab"
  ],
  "host_permissions": [
    "*://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "assets/file.png"
    }
  },
  "options_page": "settings.html",
  "icons": {
    "128": "assets/file.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "history.html",
        "history.js"
      ],
      "matches": ["*://*.youtube.com/*"]
    }
  ]
}
